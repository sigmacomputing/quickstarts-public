{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Sigma API Recipe",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}/sigma-api-recipes",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Debug Recipe Portal",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}/recipe-portal",
      "console": "integratedTerminal"
    }
  ]
}